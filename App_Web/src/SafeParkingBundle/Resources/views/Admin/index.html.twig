            </button>
            <a class="navbar-brand" href="index.html">Safe Parking</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="{{ path('safe_parking_login_logout') }}"><i class="fa fa-sign-out fa-fw"></i>
                            Logout</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <!-- Titre Tableau de bord -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tableau de bord</h1>
            </div>
        </div>
        <!-- /Titre Tableau de bord -->


        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-user fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ proprietaires | length }}</div>
                                <div>Propriétaires</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-car fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ garages | length }}</div>
                                <div>Garages</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-users fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ gardiens | length }}</div>
                                <div>Gardiens</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Titre du tableau des propriétaires -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Administration</h1>
            </div>
        </div>

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <strong>Succès!</strong> {{ flashMessage }}
            </div>
        {% endfor %}

        <!-- /Titre du tableau des propriétaires -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Propriétaires enregistrés
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover"
                                   id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>E-mail</th>
                                    <th>Mot de passe</th>
                                    <th>Parking(s)</th>
                                    <th>Action(s)</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for proprietaire in proprietaires %}
                                    <tr class="odd">
                                        <td>{{ proprietaire.nom | upper }}</td>
                                        <td>{{ proprietaire.prenom }}</td>
                                        <td>{{ proprietaire.email }}</td>
                                        <td>{{ proprietaire.password }}</td>
                                        <td class="text-center">{{ proprietaire.parkings |length }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('safe_parking_admin_editProprietaire', {'id':proprietaire.id}) }}"
                                               class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
                                            <a href="{{ path('safe_parking_admin_deleteProprietaire', {'id':proprietaire.id}) }}"
                                               class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                        <a href="{{ path('safe_parking_admin_addProprietaire') }}" class="btn btn-success">Ajouter
                                                                                                           un
                                                                                                           propriétaire</a>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
