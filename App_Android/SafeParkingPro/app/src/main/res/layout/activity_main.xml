<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.biaz.safeparkingpro.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garage"
        android:textAlignment="center"
        android:textSize="120px"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/garageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du garage"
        android:textAlignment="center"
        android:textSize="120px"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120px"
        android:weightSum="3">

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/car"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/parking"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/reserve"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/occupe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="70px"
            android:text="0"/>

        <TextView
            android:id="@+id/libre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="70px"
            android:text="40"/>

        <TextView
            android:id="@+id/reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="70px"
            android:text="0"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:weightSum="2">


        <ImageView
            android:id="@+id/btnOccupe"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/plus2"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnReserve"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/plus1"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:weightSum="2">


        <ImageView
            android:id="@+id/btnLibre"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/minus2"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnNonReserve"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@drawable/minus1"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
